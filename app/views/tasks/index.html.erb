<h1>タスク一覧</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
  <%  end %>
</ul>

<%= link_to 'タスクの投稿', new_task_path %>
<%= link_to 'ログアウト', logout_path, method: :delete %>
<% end %>